# Ghostty Configuration
# Font settings
font-family = JetBrainsMono Nerd Font
font-size = 11


keybind = cmd+s>r=reload_config
keybind = cmd+ctrl+l=goto_split:right
keybind = cmd+ctrl+j=goto_split:bottom
keybind = cmd+ctrl+h=goto_split:left
keybind = cmd+ctrl+k=goto_split:top

# other
copy-on-select = clipboard
keybind = shift+enter=text:\n
# Theme will be set by Omarchy theme system
# Colors are loaded from ~/.local/share/omarchy/themes/*/ghostty

# Cursor settings
cursor-style = block
cursor-style-blink = false

# Shell integration
shell-integration = zsh
command = /usr/bin/zsh

# Performance
macos-non-native-fullscreen = true

# Editor used by CLI
export EDITOR="nvim"
export SUDO_EDITOR="$EDITOR"

# Additional environment variables
export GOPATH="$HOME/go"
export PAGER="less --tabs=4 -RFX"
export MANPAGER="nvim +Man"
export MANWIDTH=999

# Common paths
export PATH="$GOPATH/bin:$HOME/.local/bin:$HOME/.cargo/bin:$HOME/.scripts:$PATH"
